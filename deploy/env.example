# Domain Configuration
DOMAIN=shaasam.example.com
ACME_EMAIL=you@example.com

# GitHub Container Registry
GITHUB_REPOSITORY=yourorg/shaasam
IMAGE_TAG=latest

# MongoDB
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/shaasam
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/shaasam
MONGODB_DB=shaasam

# Authentication
AUTH_SECRET=change-me
SHAASAM_API_KEY=change-me
SHAASAM_PLATFORM_FEE_BPS=0
SHAASAM_ADMIN_KEY=change-me
REQUIRE_REVIEW=true

# Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
TWILIO_VERIFY_SERVICE_SID=

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CONNECT_RETURN_URL=https://shaasam.example.com/dashboard
STRIPE_CONNECT_REFRESH_URL=https://shaasam.example.com/dashboard

# Traefik Dashboard
TRAEFIK_DASHBOARD_AUTH=admin:$apr1$example$hash
